<h1>Listing spaces</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Space setting</th>
      <th>User group</th>
      <th>Atmosphere</th>
      <th>Rent_env</th>
      <th>People</th>
      <th>City</th>

      <th>Title</th>
      <th>Content</th>
      <th>Price hour</th>
      <th>Price day</th>
      <th>Price month</th>
      <th>Price year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.user_id %></td>
        <td><%= space.space_setting_id %></td>
        <td><%= space.user_group_id %></td>
        <td><%= space.atmosphere_id %></td>
        <td><%= space.rent_envs.map(&:content).join(",") %></td>
        <td><%= space.num_of_people_id %></td>
        <td><%= space.city_id %></td>

        <td><%= space.title %></td>
        <td><%= space.content %></td>
        <td><%= space.price_hour %></td>
        <td><%= space.price_day %></td>
        <td><%= space.price_month %></td>
        <td><%= space.price_year %></td>
        <td><%= link_to 'Show', space %></td>
        <td>
          <%= link_to 'Edit', edit_space_path(space) %>
        </td>
        <td>
          <%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

