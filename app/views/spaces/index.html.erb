<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-3 sidebar-list">
      <%= render :partial => "searches/new" %>
      <hr />
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-9 col-md-offset-3 main main-list tab-content">
      <div class="row placeholders">
        <% @spaces.each do |space| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <% if space.photos.empty? %>
                <%= image_tag '/assets/list1.jpg', class: 'index-photo' %>
              <% else %>
                <%= image_tag space.photos.first.data.url(:thumb), class: 'index-photo' %>
              <% end %>
              <%#= image_tag '/assets/list1.jpg' %>
              <div class="caption">
                <h5><%= link_to space.title, space %></h5>
                <p><%= space.space_setting.content %> | <%= space.city.content %> <strong class="text-right"><%= space.price_month %>每月</strong></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%= will_paginate %>
    </div>
  </div>
</div>





