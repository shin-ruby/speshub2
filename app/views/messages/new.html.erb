<h1>New message</h1>

<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sms %>
    <%= f.input :send_id %>
    <%= f.input :accept_id %>
    <%= f.input :space_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', messages_path %>
