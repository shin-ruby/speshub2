<%= simple_form_for(@user_info, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: '姓名' %>
    <%= f.input :phone, label: '电话' %>
    <%= f.input :signature, label: '个人签名', as: :text, :input_html => { :rows => 2 } %>
    <%= f.input :introduce, label: '个人介绍', as: :text, :input_html => { :rows => 5 } %>
    <h5>头像</h5>
    <%= f.file_field :avatar %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "更新信息", class: "btn btn-primary" %>
  </div>
<% end %>
